{
  "$schema": "http://json.schemastore.org/template",
  "author": "Quangdao Nguyen",
  "description": "Opinionated Editor Config by Quangdao Nguyen",
  "classifications": [
    "Common",
    "Library"
  ],
  "identity": "QNguyenTemplate.CoreProject",
  "name": "QProject Core",
  "shortName": "q.core",
  "sourceName": "QProject.Core",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "projectName": {
      "type": "parameter",
      "isRequired": true,
      "replaces": "QProject",
      "fileRename": "QProject"
    },
    "IncludeSample": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeSample)",
          "exclude": [
            "Models/SampleEntity.cs"
          ]
        }
      ]
    }
  ]
}